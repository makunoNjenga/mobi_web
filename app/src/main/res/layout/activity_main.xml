<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="end">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/mapView"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:navigationIcon="@drawable/menu_light" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/main_card_main"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_card_main"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <GridLayout
                        android:id="@+id/m_offer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="4"
                        tools:ignore="UselessParent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="3">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/primary"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/dp_10"
                                android:layout_gravity="center"
                                tools:ignore="RtlSymmetry,UseCompoundDrawables">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sample_offer"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_14"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sample_offer_description"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_11" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_columnWeight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/primary"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/dp_10"
                                tools:ignore="RtlSymmetry,UseCompoundDrawables"
                                android:layout_gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/btn_white_sm"
                                    android:text="@string/apply"
                                    android:textColor="@color/primary"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/sp_14"
                                    tools:ignore="RelativeOverlap" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </GridLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/m_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_card_small"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="5"
                    android:layout_marginBottom="@dimen/dp_5">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corners_background"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/dp_10"
                            tools:ignore="RtlSymmetry">

                            <ImageView
                                android:layout_width="@dimen/dp_32"
                                android:layout_height="@dimen/dp_32"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/search"
                                android:src="@drawable/search" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:paddingStart="@dimen/dp_10"
                                android:text="@string/trip_destination"
                                android:textSize="@dimen/sp_18"
                                android:textStyle="bold"
                                tools:ignore="RtlSymmetry" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_corners_background"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/dp_10"
                            tools:ignore="RtlSymmetry">

                            <ImageView
                                android:layout_width="@dimen/dp_32"
                                android:layout_height="@dimen/dp_32"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/search"
                                android:src="@drawable/book_car" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_background"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    tools:ignore="RtlSymmetry">

                    <ImageView
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/search"
                        android:src="@drawable/skyscraper" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/default_background"
                        android:orientation="vertical"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:paddingStart="@dimen/dp_10"
                            android:text="@string/sample_bookmarked_location"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:paddingStart="@dimen/dp_10"
                            android:text="@string/sample_bookmark_description"
                            android:textSize="@dimen/sp_14"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_background"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_10"
                    tools:ignore="RtlSymmetry">

                    <ImageView
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/search"
                        android:src="@drawable/golf" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/default_background"
                        android:orientation="vertical"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:paddingStart="@dimen/dp_10"
                            android:text="@string/sample_kiambu_golf"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:paddingStart="@dimen/dp_10"
                            android:text="@string/sample_kiambu_golf_description"
                            android:textSize="@dimen/sp_14"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/m_trip_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_card_small"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="@dimen/dp_20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trip_details"
                    android:textColor="@color/primary"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap" />
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="1">

                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:text="@string/distance"
                            android:padding="3dip" />
                        <TextView
                            android:id="@+id/m_trip_distance"
                            android:text="@string/_10_km"
                            android:padding="3dip" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:text="@string/estimated_time"
                            android:padding="3dip" />
                        <TextView
                            android:id="@+id/m_trip_time"
                            android:text="@string/_1_hr"
                            android:padding="3dip" />
                    </TableRow>

                    <View
                        android:layout_height="2dip"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="#FF909090" />
                </TableLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="5">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="false"
                        android:layout_gravity="center_vertical"
                        android:layout_columnWeight="1">
                            <ImageView
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:src="@drawable/sedan"
                                android:contentDescription="@string/todo" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="false"
                        android:layout_columnWeight="3">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_5">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="@dimen/sp_18"
                                android:text="@string/peam_4"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/capacity"/>
                                <ImageView
                                    android:layout_width="@dimen/dp_18"
                                    android:layout_height="@dimen/dp_18"
                                    android:src="@drawable/people"
                                    android:contentDescription="@string/todo"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_gravity="center_vertical"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:textSize="@dimen/sp_16"
                                    android:text="@string/_4"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="false"
                        android:layout_gravity="center_vertical"
                        android:layout_columnWeight="1">
                        <TextView
                            android:id="@+id/m_peam_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:text="@string/ksh_1_000"/>

                    </androidx.cardview.widget.CardView>
                </GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="#FF909090" />
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="5">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="false"
                        android:layout_gravity="center_vertical"
                        android:layout_columnWeight="1">
                            <ImageView
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:src="@drawable/sports_car"
                                android:contentDescription="@string/todo" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="false"
                        android:layout_columnWeight="3">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_5">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="@dimen/sp_18"
                                android:text="@string/peam_2"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/capacity"/>
                                <ImageView
                                    android:layout_width="@dimen/dp_18"
                                    android:layout_height="@dimen/dp_18"
                                    android:src="@drawable/people"
                                    android:contentDescription="@string/todo"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_gravity="center_vertical"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:textSize="@dimen/sp_16"
                                    android:text="@string/_2"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="false"
                        android:layout_gravity="center_vertical"
                        android:layout_columnWeight="1">
                        <TextView
                            android:id="@+id/m_peam_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:text="@string/ksh_1_000"/>
                    </androidx.cardview.widget.CardView>
                </GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="#FF909090" />

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_10">
                   <Button
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/book_for_later"/>
                   <Button
                       android:id="@+id/m_clear_button"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:backgroundTint="@color/secondary"
                       android:textColor="@color/primary"
                       android:text="@string/clear"
                       android:layout_alignParentEnd="true"
                       tools:ignore="RelativeOverlap" />
               </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>