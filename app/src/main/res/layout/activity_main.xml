<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="end">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/mapView"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:navigationIcon="@drawable/menu_light" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/data_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/main_card_main"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_card_main"
                android:orientation="vertical"
                android:padding="@dimen/dp_10"/>

            <LinearLayout
                android:id="@+id/m_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_card_small"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">

                <LinearLayout
                    android:id="@+id/m_places_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_card_small"
                    android:orientation="vertical"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:columnCount="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        app:cardPreventCornerOverlap="false"
                        android:layout_columnWeight="4">
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/mapSearchStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintEnabled="false"
                                app:prefixTextColor="@color/primary"
                                app:startIconDrawable="@drawable/map"
                                app:startIconTint="@null"
                                tools:ignore="HardcodedText">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/map_search"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:hint="Trip destination?"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:padding="14dp"
                                    android:textColor="@color/primary"
                                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                                    tools:ignore="KeyboardInaccessibleWidget" />
                            </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/rounded_corners_background"
                            tools:ignore="RtlSymmetry,UselessParent">

                            <ImageView
                                android:layout_width="@dimen/dp_32"
                                android:layout_height="@dimen/dp_32"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/search"
                                android:src="@drawable/book_car" />
                        </RelativeLayout>
                    </RelativeLayout>
                </GridLayout>

                <LinearLayout
                    android:id="@+id/m_two_rivers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_background"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    tools:ignore="RtlSymmetry">

                    <ImageView
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/search"
                        android:src="@drawable/mall" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/default_background"
                        android:orientation="vertical"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:paddingStart="@dimen/dp_10"
                            android:text="@string/two_rivers_shopping_mall"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:paddingStart="@dimen/dp_10"
                            android:text="@string/nairobi_kenya"
                            android:textSize="@dimen/sp_14"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/m_kencom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/default_background"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_10"
                    tools:ignore="RtlSymmetry">

                    <ImageView
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/search"
                        android:src="@drawable/skyscraper" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/default_background"
                        android:orientation="vertical"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:paddingStart="@dimen/dp_10"
                            android:text="@string/sample_bookmarked_location"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:paddingStart="@dimen/dp_10"
                            android:text="@string/sample_bookmark_description"
                            android:textSize="@dimen/sp_14"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/m_trip_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_card_small"
                android:orientation="vertical"
                android:padding="@dimen/dp_20"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/trip_details"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="1">

                    <TableRow>

                        <TextView
                            android:layout_column="1"
                            android:padding="3dip"
                            android:text="@string/destination" />

                        <TextView
                            android:id="@+id/m_trip_destination"
                            android:padding="3dip"
                            android:text="@string/ruaka_square" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_column="1"
                            android:padding="3dip"
                            android:text="@string/distance" />

                        <TextView
                            android:id="@+id/m_trip_distance"
                            android:padding="3dip"
                            android:text="@string/_10_km" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_column="1"
                            android:padding="3dip"
                            android:text="@string/trip_time" />

                        <TextView
                            android:id="@+id/m_trip_time"
                            android:padding="3dip"
                            android:text="@string/_1_hr" />
                    </TableRow>

                    <View
                        android:layout_height="2dip"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:background="#FF909090" />
                </TableLayout>

                <GridLayout
                    android:id="@+id/select_peam_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center_vertical"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="false">

                        <ImageView
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/sedan" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="2"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_5">

                            <TextView
                                android:id="@+id/p_4_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/peam_4"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/p_4_capacity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/capacity" />

                                <ImageView
                                    android:id="@+id/peam_4_people"
                                    android:layout_width="@dimen/dp_18"
                                    android:layout_height="@dimen/dp_18"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:contentDescription="@string/todo"
                                    android:src="@drawable/people" />

                                <TextView
                                    android:id="@+id/p_4_capacity_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:text="@string/_4"
                                    android:textSize="@dimen/sp_14" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center_vertical"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="false">

                        <TextView
                            android:id="@+id/m_peam_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ksh_1_000"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>
                </GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="#FF909090" />

                <GridLayout
                    android:id="@+id/select_peam_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center_vertical"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="false">

                        <ImageView
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/sports_car" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="2"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_5">

                            <TextView
                                android:id="@+id/p_2_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/peam_2"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/p_2_capacity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/capacity" />

                                <ImageView
                                    android:id="@+id/peam_2_people"
                                    android:layout_width="@dimen/dp_18"
                                    android:layout_height="@dimen/dp_18"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:contentDescription="@string/todo"
                                    android:src="@drawable/people" />

                                <TextView
                                    android:id="@+id/p_2_count_capacity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:text="@string/_2"
                                    android:textSize="@dimen/sp_14" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center_vertical"
                        app:cardElevation="0dp"
                        app:cardPreventCornerOverlap="false">

                        <TextView
                            android:id="@+id/m_peam_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ksh_1_000"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>
                </GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="#FF909090" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">

                    <Button
                        android:id="@+id/m_confirm_trip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/confirm_trip" />

                    <Button
                        android:id="@+id/m_clear_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="@color/secondary"
                        android:text="@string/exit"
                        android:textColor="@color/primary"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>